<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="background_layout">
        <item name="android:background">@color/white</item>
    </style>
    <style name="ButtonCalculator">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_marginBottom">@dimen/button_margin</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonCalculatorPrimary" parent="ButtonCalculator">
        <item name="android:background">@drawable/circular_button_selector_white</item>
    </style>

    <style name="ButtonCalculatorSecondary" parent="ButtonCalculator">
        <item name="android:background">@drawable/circular_button_selector_secondary</item>
    </style>

    <style name="ButtonEquals" parent="ButtonCalculator">
        <item name="android:background">@drawable/circular_button_selector_equals</item>
    </style>

    <style name="EntryField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:gravity">end</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>